# Supabase Configuration
# Get these values from your Supabase project dashboard at https://app.supabase.com

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here

# Your Supabase anonymous/public key (safe to use in the browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Your Supabase service role key (NEVER expose this in client-side code)
# Only use this in API routes or server-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# HitPay Payment Configuration
# Get these from your HitPay dashboard at https://dashboard.hit-pay.com/settings/api-keys
# Use live_ keys for production and test_ keys for development

# Your HitPay Business API Key
HITPAY_API_KEY=your_hitpay_api_key_here

# Your HitPay API Salt (used for webhook signature validation)
HITPAY_API_SALT=your_hitpay_api_salt_here
